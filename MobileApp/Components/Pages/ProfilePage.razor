@page "/profile"

@inject NavigationManager NavigationManager

<div class="container flex flex-col">
    <div>
        <ProfilePictureView />
    </div>
    <div class="text-black text-center text-xl font-bold">
        <h1>@username</h1>
    </div>
    <div class="text-black text-center text-xl mb-4">
        <h1>@phoneNumber</h1>
    </div>
    <div>
        <EditProfileButtonView OnClick="@HandleEditProfile" />
    </div>
</div>

@code {
    private string username = App.CurrentUser.Username;
    private string phoneNumber = App.CurrentUser.PhoneNumber;

    private async Task HandleEditProfile()
    {
        NavigationManager.NavigateTo("/profile/edit");
    }
}