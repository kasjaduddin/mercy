<div class="justify-self-center">
    <button type="@Type"
            class="bg-black text-white text-lg font-medium mt-1 px-4 py-1 rounded-2xl hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-gray-400 focus:ring-opacity-50 transition-colors duration-200 ease-in-out @CssClass"
            @onclick="@OnClickHandler"
            disabled="@Disabled">
        @Text
        @ChildContent
    </button>
</div>

@code {
    [Parameter]
    public string Type { get; set; } = "button";

    [Parameter]
    public string Text { get; set; } = "Edit Profile";

    [Parameter]
    public bool Disabled { get; set; } = false;

    [Parameter]
    public EventCallback<MouseEventArgs> OnClick { get; set; }

    [Parameter]
    public string CssClass { get; set; } = "";

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    private async Task OnClickHandler(MouseEventArgs e)
    {
        if (OnClick.HasDelegate)
        {
            await OnClick.InvokeAsync(e);
        }
    }
}